{
  "name": "expense-tracker-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "client-dev": "webpack --mode development --config webpack.config.dev.js",
    "client-prod": "webpack --mode production --config webpack.config.prod.js",
    "build": "npm run clean && mkdir dist && npm run client-dev && babel src/backend/server.js -s -d dist",
    "build-prod": "npm run clean && mkdir dist && npm run client-prod && babel src/backend/server.js -s -d dist",
    "start": "npm run start-dev",
    "start-dev": "npm run build && node ./bin/dev",
    "start-prod": "npm run build  && node ./bin/prod",
    "lint-server": "./node_modules/.bin/eslint src/backend",
    "lint-server-fix": "./node_modules/.bin/eslint src/backend --fix",
    "lint-client": "./node_modules/.bin/eslint src/frontend",
    "lint-client-fix": "./node_modules/.bin/eslint src/frontend --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/way2datta/expense-tracker-nodejs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/way2datta/expense-tracker-nodejs/issues"
  },
  "homepage": "https://gitlab.com/way2datta/expense-tracker-nodejs#readme",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.2.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.13",
    "mongoose-unique-validator": "^2.0.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-toastify": "^4.5.1",
    "recharts": "^1.4.2",
    "uglifyjs-webpack-plugin": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.11.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
